//You are given a string s  of small letters. You can reorder or rearrange the characters of that string in any order or any way. You have to determine whether you can build any valid palindrome from that string.Print “YES” if you can otherwise print “NO”.

Note - A palindrome is a number or string that reads the same backwards as forwards

#include <iostream>
#include <string>
#include <unordered_map>

bool canBuildPalindrome(const std::string& s) {
    std::unordered_map<char, int> charCount;

    for (char c : s) {
        charCount[c]++;
    }

    int oddCount = 0;
    for (const auto& pair : charCount) {
        if (pair.second % 2 != 0) {
            oddCount++;
        }
    }

    // For a string to be a palindrome, it can have at most one character with an odd count.
    return oddCount <= 1;
}

int main() {
    std::string s;
    std::cout << "Enter a string of small letters: ";
    std::cin >> s;

    if (canBuildPalindrome(s)) {
        std::cout << "YES" << std::endl;
    } else {
        std::cout << "NO" << std::endl;
    }

    return 0;
}
