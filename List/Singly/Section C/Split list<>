void AlternatingSplit(Node* source, 
                      Node** aRef, Node** bRef) 
{ 
    Node aDummy; 
     
    /* points to the last node in 'a' */
    Node* aTail = &aDummy; 
    Node bDummy; 
     
    /* points to the last node in 'b' */
    Node* bTail = &bDummy; 
    Node* current = source; 
    aDummy.next = NULL; 
    bDummy.next = NULL; 
    while (current != NULL) 
    { 
        MoveNode(&(aTail->next), ¤t); /* add at 'a' tail */
        aTail = aTail->next; /* advance the 'a' tail */
        if (current != NULL) 
        { 
            MoveNode(&(bTail->next), ¤t); 
            bTail = bTail->next; 
        } 
    } 
    *aRef = aDummy.next; 
    *bRef = bDummy.next; 
} 
