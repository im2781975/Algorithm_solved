You are given an array of n integers, and your task is to find two values (at distinct positions) whose sum is x.
#include <iostream>
#include <unordered_map>
#include <vector>

std::pair<int, int> findTwoSum(std::vector<int>& nums, int x) {
    std::unordered_map<int, int> numMap;
    for (int i = 0; i < nums.size(); i++) {
        int complement = x - nums[i];
        if (numMap.find(complement) != numMap.end()) {
            return std::make_pair(numMap[complement], i);
        }
        numMap[nums[i]] = i;
    }
    return std::make_pair(-1, -1);  // Return (-1, -1) if no such pair is found.
}

int main() {
    std::vector<int> nums = {2, 7, 11, 15};
    int target = 9;
    std::pair<int, int> result = findTwoSum(nums, target);
    if (result.first != -1) {
        std::cout << "Indices: " << result.first << " and " << result.second << std::endl;
        std::cout << "Values: " << nums[result.first] << " and " << nums[result.second] << std::endl;
    } else {
        std::cout << "No such pair found." << std::endl;
    }
    return 0;
}

